// DEFAULT ROUTE
// METHOD POST
http://localhost:3000/api/auth/forgot

// 401 - without password

curl --location 'http://localhost:3000/api/auth/forgot' \
--header 'Content-Type: application/json' \
--data-raw '{
    "email":"contato@teste.com.brs"
}'

// 401 - wrong password
curl --location 'http://localhost:3000/api/auth/forgot' \
--header 'Content-Type: application/json' \
--data-raw '{
    "email":"contato@teste.com.brs"
}'


// 200
curl --location 'http://localhost:3000/api/auth/forgot' \
--header 'Content-Type: application/json' \
--data-raw '{
    "email":"contato@teste.com.br"
}'
